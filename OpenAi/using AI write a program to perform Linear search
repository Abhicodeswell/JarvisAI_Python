OpenAI response for using AI write a program to perform Linear search
*******************************************



#include <iostream>
using namespace std;

// Function to perform Linear Search
int linearSearch(int array[], int n, int x)
{
     for (int i = 0; i < n; i++)
     {
        if (array[i] == x)
            return i;
     }
 
    return -1;
}

// Main function
int main()
{
    int n, x;
    cout << "Enter the size of the array: ";
    cin >> n;
 
    int array[n]; 
    cout << "Enter the elements of the array: \n";
    for (int i = 0; i < n; i++)
    {
        cin >> array[i];
    }
 
    cout << "Enter the number to be searched: ";
    cin >> x;
 
    int index = linearSearch(array, n, x);
 
    if (index == -1)
        cout << "Element is not present in the array!";
    else
        cout << "Element is present at index " << index;
 
    return 0;
}